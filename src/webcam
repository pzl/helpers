src=0
stillframe=""



if [ "$1" == "still" ]; then
    stillframe="-vo png:outdir=/tmp:prefix=stillshot -frames 4"
    if [ "$2" != "" ]; then
        src="$2"
    fi
elif [ "$1" != "" ]; then
    src="$1"
fi

#old quality 640:480
#fps=10
#outfmt=rgb16
#gain=1

mplayer $stillframe -tv driver=v4l2:width=1280:height=960:device=/dev/video$src:noaudio -vf screenshot tv://


success=$?
if [ $success -eq 0 ]; then

    if [ "$stillframe" != "" ]; then
        cp /tmp/stillshot*04.png "still_$(date +%Y%m%d_%I:%M:%S).png"
        rm -rf /tmp/stillshot*
    fi
else
    echo "capture failed"
fi
